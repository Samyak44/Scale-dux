# Database
DATABASE_URL=postgresql://user:password@localhost:5432/scaledux
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Settings
API_V1_PREFIX=/api/v1
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Scoring Engine
DEFAULT_FRAMEWORK_VERSION=1.0.0
ENABLE_DRAFT_SCORES=True
SNAPSHOT_DAYS=1,15

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,doc,docx,xls,xlsx
UPLOAD_STORAGE_PATH=/var/uploads/scaledux

# Time Decay
DEFAULT_DECAY_LAMBDA=0.005
HIGH_VOLATILITY_LAMBDA=0.1
LOW_VOLATILITY_LAMBDA=0.001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
